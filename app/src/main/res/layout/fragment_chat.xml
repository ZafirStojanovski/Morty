<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/chat_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input"
        app:outcomingDefaultBubbleColor="@color/tabIndicator"
        app:outcomingTextColor="@color/black"
        app:outcomingTimeTextColor="@color/warm_grey_two"
        app:incomingDefaultBubbleColor="@color/colorAccent"
        app:incomingTextColor="@color/tabIndicator"
        app:incomingTimeTextColor="@color/warm_grey_two"
        />

    <com.stfalcon.chatkit.messages.MessageInput
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:inputHint="@string/hint_enter_a_message"
        app:inputTextColor="@color/dialog_divider"
        app:inputButtonBackground="@color/colorAccent"/>

</RelativeLayout>